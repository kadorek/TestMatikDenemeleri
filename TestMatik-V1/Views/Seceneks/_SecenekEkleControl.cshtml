@model System.Nullable<Int32>
<div id='@("SecenekKontrol"+Model)'>
    @Html.Label("Metin", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-3">
        @Html.Editor("txtSecenekMetin" + Model, "tinymce_jquery_full_secenek", additionalViewData: new { id = "txtSecenekMetin" + Model })
    </div>
    <div class="col-md-2">
        <a class="btn" id='@("btnCikar"+Model)' n="@Model">Çıkar</a>
    </div>
</div>
