@using (var sc=Html.BeginScriptContext()) {
    sc.AddScriptBlock(
        @<script>
            $(document).ready(function () {
                $("#btnCikar" +@(Model)).on("click", function (e) {
                    var target = $('#@("SecenekKontrol"+Model)');
                    target.remove();
                });
            });
        </script>
        , true);
